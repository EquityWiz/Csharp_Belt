@model User

<form asp-action="Create" asp-controller="Home" method="POST">
        <div class="form-group">
            <span asp-validation-for="Name"></span>
            <input asp-for="Name" class="form-control" placeholder="Name">
        </div>
        <div class="form-group">
            <span asp-validation-for="Email"></span>
            <input asp-for="Email" class="form-control" placeholder="Email">
        </div>
        <div class="form-group">
            <span asp-validation-for="Password"></span>
            <input asp-for="Password" class="form-control" placeholder="Password">
        </div>
        <div class="form-group">
            <span asp-validation-for="ConfirmPassword"></span>
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
        </div>
            <button type="submit" class="btn btn-primary btn-block mb-2">Create User</button>
</form>